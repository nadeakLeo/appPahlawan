<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.apppahlawan">

    <uses-permission android:name="android.permission.SET_WALLPAPER"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".page.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".page.PahlawanPage"
            android:label="Pahlawan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".page.MainActivity"/>
        </activity>

        <activity
            android:name=".page.QuotesPage"
            android:label="Quotes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".page.MainActivity" />
        </activity>
        <activity
            android:name=".page.DetailPahlawan"
            android:label="Profil Pahlawan">

        </activity>
    </application>

</manifest>